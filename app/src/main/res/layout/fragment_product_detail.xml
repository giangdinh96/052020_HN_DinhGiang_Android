<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/colorPaleGrey"
                android:orientation="vertical">

                <vn.teko.test.widget.Toolbar
                    android:id="@+id/toolbarTb"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:subtitleTextColor="@color/colorTomato"
                    app:tbl_header_action_left_style="image"
                    app:tbl_header_action_right_style="image"
                    app:tbl_header_left_image="@drawable/ic_back_32"
                    app:tbl_header_subtitle="Subtitle"
                    app:tbl_header_subtitle_show="true"
                    app:tbl_header_subtitle_size="13sp"
                    app:tbl_header_title="Title"
                    app:tbl_header_title_size="13sp"
                    app:titleTextColor="@color/colorDarkGrey" />

                <include
                    android:id="@+id/container_banner"
                    layout="@layout/container_banner"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="2dp" />

                <include
                    android:id="@+id/container_more_product"
                    layout="@layout/container_more_product"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp" />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</layout>