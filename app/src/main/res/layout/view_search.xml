<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:parentTag="androidx.constraintlayout.widget.ConstraintLayout">

    <EditText
        android:id="@+id/content_et"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_search_view"
        android:hint="@string/search_product_hint"
        android:imeOptions="actionSearch"
        android:inputType="text"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:textColor="@android:color/black"
        android:textColorHint="@color/colorCoolGrey"
        android:textSize="14sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/search_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="8dp"
        android:src="@drawable/ic_search"
        android:tint="@color/colorTomato"
        app:layout_constraintBottom_toBottomOf="@id/content_et"
        app:layout_constraintLeft_toLeftOf="@id/content_et"
        app:layout_constraintTop_toTopOf="@id/content_et" />

    <ImageView
        android:id="@+id/clear_iv"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_close"
        android:stateListAnimator="@animator/anim_press_common"
        android:tint="@color/colorTomato"
        app:layout_constraintBottom_toBottomOf="@id/content_et"
        app:layout_constraintRight_toRightOf="@id/content_et"
        app:layout_constraintTop_toTopOf="@id/content_et" />
</merge>