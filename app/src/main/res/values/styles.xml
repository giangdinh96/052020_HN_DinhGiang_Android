<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Font family -->
    <style name="BaseText" parent="TextAppearance.AppCompat" />

    <style name="TextNormal" parent="BaseText">
        <item name="fontPath">fonts/SFProText-Regular.ttf</item>
    </style>

    <style name="TextMedium" parent="BaseText">
        <item name="fontPath">fonts/SFProText-Medium.ttf</item>
    </style>

    <style name="TextSemiBold" parent="BaseText">
        <item name="fontPath">fonts/SFProText-SemiBold.ttf</item>
    </style>

    <style name="TextActionToolbar" parent="TextSemiBold">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextTitleToolbar" parent="TextSemiBold">
        <item name="android:textColor">@color/colorDarkGrey</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>
